Subject: [PATCH 5/5] CMakeLists.txt: use python3 for setup/build, fix
 https://build.ros.org/job/Nbin_uF64__rtshell__ubuntu_focal_amd64__binary/15/console

---
 CMakeLists.txt | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index b997298..5509169 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -8,11 +8,11 @@ else()
 endif()
 
 add_custom_target(compile_rtshell ALL
-  COMMAND python setup.py build
+  COMMAND python3 setup.py build
   WORKING_DIRECTORY ${PROJECT_SOURCE_DIR})
 
 add_custom_target(install_rtshell
-  COMMAND python setup.py install --prefix=${CMAKE_INSTALL_PREFIX} ${SETUPTOOLS_ARG_EXTRA} --root=/$(DESTDIR) --skip-build
+  COMMAND python3 setup.py install --prefix=${CMAKE_INSTALL_PREFIX} ${SETUPTOOLS_ARG_EXTRA} --root=/$(DESTDIR) --skip-build
   WORKING_DIRECTORY ${PROJECT_SOURCE_DIR})
 
 install(CODE "execute_process(COMMAND \"${CMAKE_COMMAND}\" --build \"${CMAKE_BINARY_DIR}\" --target install_rtshell)")
